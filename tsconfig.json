{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@/components/*": ["src/components/*"],
      "@/modules/*": ["src/modules/*"],
      "@/*": ["src/*"]
    },
    "module": "commonjs",
    "target": "es6",
    "sourceMap": true,
    "downlevelIteration": true,
    "allowJs": true,
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "outDir": "/dist"
  },
  "exclude": [
    "node_modules"
  ]
}